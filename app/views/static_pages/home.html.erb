<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="jumbotron">
      <div class="container">
        <h1>Hunters MicroPosts</h1>
        <p>Welcome to Hunters MicroPosts.</p>
        <p><%= link_to "Sign up now!", '#', class: "btn btn-primary btn-lg", role: "button" %></p>
      </div>
    </div>
<% end %>